<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="moe.yiheng.domain">
    <class name="Message" table="message">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="originMsgId" column="origin_msg_id"/>
        <property name="fromGroupId" column="from_group_id"/>
        <property name="content" column="content"/>
        <property name="messageIdSaved" column="message_id_saved"/>
        <property name="askingMessageId" column="asking_message_id"/>
        <property name="hasForwarded" column="has_forwarded"/>
    </class>
</hibernate-mapping>
